@model LaptopShopWebsite.Models.Order
@{
    ViewData["Title"] = "Chi tiết đơn hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="space-y-6">
    <!-- Header -->
    <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
            <a asp-action="Orders" class="text-gray-500 hover:text-gray-700">
                <i data-lucide="arrow-left" class="h-5 w-5"></i>
            </a>
            <h1 class="text-2xl font-bold text-gray-900">Chi tiết đơn hàng #@Model.Id.Substring(0, 8).ToUpper()</h1>
        </div>
        <div class="flex items-center space-x-3">
            <span class="inline-flex px-3 py-1 text-sm font-semibold rounded-full 
                @(Model.Status == "pending" ? "bg-yellow-100 text-yellow-800" : 
                  Model.Status == "processing" ? "bg-blue-100 text-blue-800" :
                  Model.Status == "shipped" ? "bg-purple-100 text-purple-800" :
                  Model.Status == "delivered" ? "bg-green-100 text-green-800" :
                  "bg-red-100 text-red-800")">
                @(Model.Status == "pending" ? "Chờ xử lý" :
                  Model.Status == "processing" ? "Đang xử lý" :
                  Model.Status == "shipped" ? "Đã gửi" :
                  Model.Status == "delivered" ? "Đã giao" : "Đã hủy")
            </span>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Order Information -->
        <div class="lg:col-span-2 space-y-6">
            <!-- Products -->
            <div class="bg-white rounded-lg shadow-md">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h2 class="text-lg font-semibold">Sản phẩm đã đặt</h2>
                </div>
                <div class="p-6">
                    <div class="space-y-4">
                        @foreach (var item in Model.Items)
                        {
                            <div class="flex items-center space-x-4 p-4 border border-gray-200 rounded-lg">
                                <img src="@item.Image" alt="@item.Name" class="w-16 h-16 object-cover rounded-lg">
                                <div class="flex-1">
                                    <h3 class="font-medium text-gray-900">@item.Name</h3>
                                    <p class="text-sm text-gray-500">@item.Brand</p>
                                    <p class="text-sm text-gray-600">Đơn giá: @item.Price.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</p>
                                </div>
                                <div class="text-right">
                                    <p class="font-medium">Số lượng: @item.Quantity</p>
                                    <p class="text-lg font-semibold text-blue-700">
                                        @((item.Price * item.Quantity).ToString("C0", new System.Globalization.CultureInfo("vi-VN")))
                                    </p>
                                </div>
                            </div>
                        }
                    </div>
                    
                    <div class="mt-6 pt-4 border-t border-gray-200">
                        <div class="flex justify-between items-center text-lg font-semibold">
                            <span>Tổng cộng:</span>
                            <span class="text-blue-700">@Model.Total.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Order Timeline -->
            <div class="bg-white rounded-lg shadow-md">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h2 class="text-lg font-semibold">Lịch sử đơn hàng</h2>
                </div>
                <div class="p-6">
                    <div class="space-y-4">
                        <div class="flex items-center space-x-3">
                            <div class="w-3 h-3 bg-blue-500 rounded-full"></div>
                            <div>
                                <p class="font-medium">Đơn hàng được tạo</p>
                                <p class="text-sm text-gray-500">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                            </div>
                        </div>
                        
                        @if (Model.Status != "pending")
                        {
                            <div class="flex items-center space-x-3">
                                <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
                                <div>
                                    <p class="font-medium">Đơn hàng đang được xử lý</p>
                                    <p class="text-sm text-gray-500">Cập nhật bởi admin</p>
                                </div>
                            </div>
                        }
                        
                        @if (Model.Status == "shipped" || Model.Status == "delivered")
                        {
                            <div class="flex items-center space-x-3">
                                <div class="w-3 h-3 bg-purple-500 rounded-full"></div>
                                <div>
                                    <p class="font-medium">Đơn hàng đã được gửi</p>
                                    <p class="text-sm text-gray-500">Đang trên đường giao hàng</p>
                                </div>
                            </div>
                        }
                        
                        @if (Model.Status == "delivered")
                        {
                            <div class="flex items-center space-x-3">
                                <div class="w-3 h-3 bg-green-500 rounded-full"></div>
                                <div>
                                    <p class="font-medium">Đơn hàng đã được giao</p>
                                    <p class="text-sm text-gray-500">Hoàn thành</p>
                                </div>
                            </div>
                        }
                        
                        @if (Model.Status == "cancelled")
                        {
                            <div class="flex items-center space-x-3">
                                <div class="w-3 h-3 bg-red-500 rounded-full"></div>
                                <div>
                                    <p class="font-medium">Đơn hàng đã bị hủy</p>
                                    <p class="text-sm text-gray-500">Đã hủy bởi admin</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="space-y-6">
            <!-- Customer Information -->
            <div class="bg-white rounded-lg shadow-md">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h2 class="text-lg font-semibold">Thông tin khách hàng</h2>
                </div>
                <div class="p-6 space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Họ tên</label>
                        <p class="mt-1 text-sm text-gray-900">@Model.CustomerName</p>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Email</label>
                        <p class="mt-1 text-sm text-gray-900">@Model.CustomerEmail</p>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Số điện thoại</label>
                        <p class="mt-1 text-sm text-gray-900">@Model.CustomerPhone</p>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Địa chỉ giao hàng</label>
                        <p class="mt-1 text-sm text-gray-900">@Model.CustomerAddress</p>
                    </div>
                </div>
            </div>

            <!-- Order Actions -->
            <div class="bg-white rounded-lg shadow-md">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h2 class="text-lg font-semibold">Cập nhật trạng thái</h2>
                </div>
                <div class="p-6">
                    <form asp-action="UpdateOrderStatus" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <div class="space-y-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Trạng thái đơn hàng</label>
                                <select name="status" class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
                                    <option value="pending">Chờ xử lý</option>
                                    <option value="processing">Đang xử lý</option>
                                    <option value="shipped">Đã gửi</option>
                                    <option value="delivered">Đã giao</option>
                                    <option value="cancelled">Đã hủy</option>
                                </select>
                                <script>
                                    document.addEventListener('DOMContentLoaded', function() {
                                        var select = document.querySelector('select[name="status"]');
                                        select.value = '@Model.Status';
                                    });
                                </script>
                            </div>
                            <button type="submit" class="w-full bg-blue-700 text-white py-2 px-4 rounded-lg hover:bg-blue-800 transition-colors">
                                Cập nhật trạng thái
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Order Summary -->
            <div class="bg-white rounded-lg shadow-md">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h2 class="text-lg font-semibold">Thông tin đơn hàng</h2>
                </div>
                <div class="p-6 space-y-3">
                    <div class="flex justify-between">
                        <span class="text-gray-600">Mã đơn hàng:</span>
                        <span class="font-medium">#@Model.Id.Substring(0, 8).ToUpper()</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600">Ngày đặt:</span>
                        <span class="font-medium">@Model.CreatedAt.ToString("dd/MM/yyyy")</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600">Phương thức thanh toán:</span>
                        <span class="font-medium">
                            @(Model.PaymentMethod == "cod" ? "COD" : "Chuyển khoản")
                        </span>
                    </div>
                    <div class="flex justify-between border-t pt-3">
                        <span class="text-gray-600">Tổng tiền:</span>
                        <span class="font-semibold text-blue-700">@Model.Total.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        lucide.createIcons();
    </script>
}