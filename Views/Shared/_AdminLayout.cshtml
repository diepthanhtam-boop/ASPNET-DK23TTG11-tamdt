<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-gray-100">
    <div class="flex h-screen">
        <!-- Sidebar -->
        <div class="bg-gray-800 text-white w-64 flex-shrink-0">
            <div class="p-6">
                <div class="flex items-center space-x-2">
                    <i data-lucide="laptop" class="h-8 w-8 text-blue-400"></i>
                    <span class="text-xl font-bold">Admin Panel</span>
                </div>
            </div>
            
            <nav class="mt-6">
                <div class="px-6 py-2">
                    <p class="text-xs font-semibold text-gray-400 uppercase tracking-wider">Menu</p>
                </div>
                
                <a asp-controller="Admin" asp-action="Index" 
                   class="flex items-center px-6 py-3 text-gray-300 hover:bg-gray-700 hover:text-white transition-colors @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "bg-gray-700 text-white" : "")">
                    <i data-lucide="home" class="h-5 w-5 mr-3"></i>
                    Dashboard
                </a>
                
                <a asp-controller="Admin" asp-action="Products" 
                   class="flex items-center px-6 py-3 text-gray-300 hover:bg-gray-700 hover:text-white transition-colors @(ViewContext.RouteData.Values["Action"]?.ToString() == "Products" ? "bg-gray-700 text-white" : "")">
                    <i data-lucide="package" class="h-5 w-5 mr-3"></i>
                    Sản phẩm
                </a>
                
                <a asp-controller="Admin" asp-action="Orders" 
                   class="flex items-center px-6 py-3 text-gray-300 hover:bg-gray-700 hover:text-white transition-colors @(ViewContext.RouteData.Values["Action"]?.ToString() == "Orders" ? "bg-gray-700 text-white" : "")">
                    <i data-lucide="shopping-cart" class="h-5 w-5 mr-3"></i>
                    Đơn hàng
                </a>
                
                <a asp-controller="Admin" asp-action="Contacts" 
                   class="flex items-center px-6 py-3 text-gray-300 hover:bg-gray-700 hover:text-white transition-colors @(ViewContext.RouteData.Values["Action"]?.ToString() == "Contacts" ? "bg-gray-700 text-white" : "")">
                    <i data-lucide="mail" class="h-5 w-5 mr-3"></i>
                    Liên hệ
                </a>
                
                <a asp-controller="Admin" asp-action="Users" 
                   class="flex items-center px-6 py-3 text-gray-300 hover:bg-gray-700 hover:text-white transition-colors @(ViewContext.RouteData.Values["Action"]?.ToString() == "Users" ? "bg-gray-700 text-white" : "")">
                    <i data-lucide="users" class="h-5 w-5 mr-3"></i>
                    Khách hàng
                </a>
                
                <div class="border-t border-gray-700 mt-6 pt-6">
                    <a asp-controller="Home" asp-action="Index" 
                       class="flex items-center px-6 py-3 text-gray-300 hover:bg-gray-700 hover:text-white transition-colors">
                        <i data-lucide="external-link" class="h-5 w-5 mr-3"></i>
                        Xem website
                    </a>
                </div>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="flex-1 flex flex-col overflow-hidden">
            <!-- Header -->
            <header class="bg-white shadow-sm border-b border-gray-200">
                <div class="flex items-center justify-between px-6 py-4">
                    <h1 class="text-2xl font-semibold text-gray-900">@ViewData["Title"]</h1>
                    
                    <div class="flex items-center space-x-4">
                        <div class="relative">
                            <button class="flex items-center space-x-2 text-gray-700 hover:text-gray-900">
                                <i data-lucide="user" class="h-5 w-5"></i>
                                <span>Admin</span>
                                <i data-lucide="chevron-down" class="h-4 w-4"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </header>

            <!-- Page Content -->
            <main class="flex-1 overflow-y-auto p-6">
                @if (TempData["Success"] != null)
                {
                    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6 flex items-center">
                        <i data-lucide="check-circle" class="h-5 w-5 mr-2"></i>
                        @TempData["Success"]
                    </div>
                }

                @if (TempData["Error"] != null)
                {
                    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6 flex items-center">
                        <i data-lucide="x-circle" class="h-5 w-5 mr-2"></i>
                        @TempData["Error"]
                    </div>
                }

                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Initialize Lucide icons
        lucide.createIcons();
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>