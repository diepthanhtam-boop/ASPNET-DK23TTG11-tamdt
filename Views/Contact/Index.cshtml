@model LaptopShopWebsite.Models.ContactRequest
@{
    ViewData["Title"] = "Liên hệ";
}

<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <h1 class="text-3xl font-bold text-gray-900 mb-4">Liên hệ với chúng tôi</h1>
            <p class="text-gray-600 max-w-2xl mx-auto">
                Chúng tôi luôn sẵn sàng hỗ trợ bạn. Hãy liên hệ với chúng tôi qua form dưới đây hoặc thông tin liên hệ bên cạnh.
            </p>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6">
                @TempData["Success"]
            </div>
        }

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
            <!-- Contact Form -->
            <div class="bg-white rounded-lg shadow-md p-8">
                <h2 class="text-2xl font-semibold mb-6">Gửi tin nhắn</h2>
                
                <form asp-action="Index" method="post">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                        <div>
                            <label asp-for="Name" class="block text-sm font-medium text-gray-700 mb-2">Họ và tên *</label>
                            <input asp-for="Name" type="text" required 
                                   class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" 
                                   placeholder="Nhập họ và tên của bạn" />
                            <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
                        </div>
                        
                        <div>
                            <label asp-for="Phone" class="block text-sm font-medium text-gray-700 mb-2">Số điện thoại *</label>
                            <input asp-for="Phone" type="tel" required 
                                   class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" 
                                   placeholder="Nhập số điện thoại" />
                            <span asp-validation-for="Phone" class="text-red-500 text-sm"></span>
                        </div>
                    </div>
                    
                    <div class="mb-6">
                        <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-2">Email *</label>
                        <input asp-for="Email" type="email" required 
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" 
                               placeholder="Nhập địa chỉ email" />
                        <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
                    </div>
                    
                    <div class="mb-6">
                        <label asp-for="Message" class="block text-sm font-medium text-gray-700 mb-2">Tin nhắn *</label>
                        <textarea asp-for="Message" rows="5" required 
                                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" 
                                  placeholder="Nhập nội dung tin nhắn của bạn..."></textarea>
                        <span asp-validation-for="Message" class="text-red-500 text-sm"></span>
                    </div>
                    
                    <button type="submit" 
                            class="w-full bg-blue-700 text-white py-3 px-6 rounded-lg hover:bg-blue-800 transition-colors font-semibold flex items-center justify-center space-x-2">
                        <i data-lucide="send" class="h-5 w-5"></i>
                        <span>Gửi tin nhắn</span>
                    </button>
                </form>
            </div>

            <!-- Contact Information -->
            <div class="space-y-8">
                <!-- Contact Details -->
                <div class="bg-white rounded-lg shadow-md p-8">
                    <h2 class="text-2xl font-semibold mb-6">Thông tin liên hệ</h2>
                    
                    <div class="space-y-6">
                        <div class="flex items-start space-x-4">
                            <div class="bg-blue-100 p-3 rounded-lg">
                                <i data-lucide="map-pin" class="h-6 w-6 text-blue-600"></i>
                            </div>
                            <div>
                                <h3 class="font-semibold text-gray-900">Địa chỉ</h3>
                                <p class="text-gray-600">123 Đường ABC, Quận 1, TP. Hồ Chí Minh</p>
                            </div>
                        </div>
                        
                        <div class="flex items-start space-x-4">
                            <div class="bg-green-100 p-3 rounded-lg">
                                <i data-lucide="phone" class="h-6 w-6 text-green-600"></i>
                            </div>
                            <div>
                                <h3 class="font-semibold text-gray-900">Điện thoại</h3>
                                <p class="text-gray-600">0123 456 789</p>
                                <p class="text-gray-600">0987 654 321</p>
                            </div>
                        </div>
                        
                        <div class="flex items-start space-x-4">
                            <div class="bg-purple-100 p-3 rounded-lg">
                                <i data-lucide="mail" class="h-6 w-6 text-purple-600"></i>
                            </div>
                            <div>
                                <h3 class="font-semibold text-gray-900">Email</h3>
                                <p class="text-gray-600">info@laptopstore.com</p>
                                <p class="text-gray-600">support@laptopstore.com</p>
                            </div>
                        </div>
                        
                        <div class="flex items-start space-x-4">
                            <div class="bg-orange-100 p-3 rounded-lg">
                                <i data-lucide="clock" class="h-6 w-6 text-orange-600"></i>
                            </div>
                            <div>
                                <h3 class="font-semibold text-gray-900">Giờ làm việc</h3>
                                <p class="text-gray-600">Thứ 2 - Thứ 6: 8:00 - 18:00</p>
                                <p class="text-gray-600">Thứ 7 - Chủ nhật: 9:00 - 17:00</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Why Choose Us -->
                <div class="bg-white rounded-lg shadow-md p-8">
                    <h2 class="text-2xl font-semibold mb-6">Tại sao chọn chúng tôi?</h2>
                    
                    <div class="space-y-4">
                        <div class="flex items-center space-x-3">
                            <i data-lucide="check-circle" class="h-5 w-5 text-green-500"></i>
                            <span class="text-gray-700">Sản phẩm chính hãng 100%</span>
                        </div>
                        <div class="flex items-center space-x-3">
                            <i data-lucide="check-circle" class="h-5 w-5 text-green-500"></i>
                            <span class="text-gray-700">Bảo hành toàn cầu</span>
                        </div>
                        <div class="flex items-center space-x-3">
                            <i data-lucide="check-circle" class="h-5 w-5 text-green-500"></i>
                            <span class="text-gray-700">Giao hàng miễn phí toàn quốc</span>
                        </div>
                        <div class="flex items-center space-x-3">
                            <i data-lucide="check-circle" class="h-5 w-5 text-green-500"></i>
                            <span class="text-gray-700">Hỗ trợ kỹ thuật 24/7</span>
                        </div>
                        <div class="flex items-center space-x-3">
                            <i data-lucide="check-circle" class="h-5 w-5 text-green-500"></i>
                            <span class="text-gray-700">Đổi trả trong 7 ngày</span>
                        </div>
                        <div class="flex items-center space-x-3">
                            <i data-lucide="check-circle" class="h-5 w-5 text-green-500"></i>
                            <span class="text-gray-700">Giá cả cạnh tranh nhất thị trường</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        lucide.createIcons();
    </script>
}