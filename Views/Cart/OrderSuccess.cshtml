@model LaptopShopWebsite.Models.Order
@{
    ViewData["Title"] = "Đặt hàng thành công";
}

<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-white rounded-lg shadow-md p-8 text-center">
            <div class="mb-6">
                <div class="mx-auto w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mb-4">
                    <i data-lucide="check" class="h-8 w-8 text-green-600"></i>
                </div>
                <h1 class="text-3xl font-bold text-gray-900 mb-2">Đặt hàng thành công!</h1>
                <p class="text-gray-600">Cảm ơn bạn đã mua sắm tại LaptopStore</p>
            </div>

            <div class="bg-gray-50 rounded-lg p-6 mb-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 text-left">
                    <div>
                        <h3 class="font-semibold text-gray-900 mb-3">Thông tin đơn hàng</h3>
                        <div class="space-y-2 text-sm">
                            <div class="flex justify-between">
                                <span class="text-gray-600">Mã đơn hàng:</span>
                                <span class="font-medium">#@Model.Id.Substring(0, 8).ToUpper()</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-600">Ngày đặt:</span>
                                <span class="font-medium">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-600">Tổng tiền:</span>
                                <span class="font-medium text-blue-700">@Model.Total.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-600">Trạng thái:</span>
                                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">
                                    Chờ xử lý
                                </span>
                            </div>
                        </div>
                    </div>
                    
                    <div>
                        <h3 class="font-semibold text-gray-900 mb-3">Thông tin giao hàng</h3>
                        <div class="space-y-2 text-sm">
                            <div>
                                <span class="text-gray-600">Người nhận:</span>
                                <span class="font-medium block">@Model.CustomerName</span>
                            </div>
                            <div>
                                <span class="text-gray-600">Điện thoại:</span>
                                <span class="font-medium block">@Model.CustomerPhone</span>
                            </div>
                            <div>
                                <span class="text-gray-600">Email:</span>
                                <span class="font-medium block">@Model.CustomerEmail</span>
                            </div>
                            <div>
                                <span class="text-gray-600">Địa chỉ:</span>
                                <span class="font-medium block">@Model.CustomerAddress</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="bg-blue-50 rounded-lg p-6 mb-6">
                <h3 class="font-semibold text-gray-900 mb-4">Sản phẩm đã đặt</h3>
                <div class="space-y-3">
                    @foreach (var item in Model.Items)
                    {
                        <div class="flex items-center justify-between p-3 bg-white rounded-lg">
                            <div class="flex items-center space-x-3">
                                <img src="@item.Image" alt="@item.Name" class="w-12 h-12 object-cover rounded-lg">
                                <div class="text-left">
                                    <h4 class="font-medium text-gray-900">@item.Name</h4>
                                    <p class="text-sm text-gray-500">@item.Brand</p>
                                </div>
                            </div>
                            <div class="text-right">
                                <p class="font-medium">@item.Quantity x @item.Price.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</p>
                                <p class="text-sm text-gray-500">= @((item.Quantity * item.Price).ToString("C0", new System.Globalization.CultureInfo("vi-VN")))</p>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="space-y-4">
                <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
                    <div class="flex items-start space-x-3">
                        <i data-lucide="clock" class="h-5 w-5 text-yellow-600 mt-0.5"></i>
                        <div class="text-left">
                            <h4 class="font-medium text-yellow-800">Thông tin quan trọng</h4>
                            <div class="text-sm text-yellow-700 mt-1">
                                <p>• Chúng tôi sẽ liên hệ với bạn trong vòng 24h để xác nhận đơn hàng</p>
                                <p>• Thời gian giao hàng dự kiến: 1-3 ngày làm việc</p>
                                <p>• Bạn có thể theo dõi trạng thái đơn hàng qua email hoặc số điện thoại</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <a asp-controller="Home" asp-action="Index" 
                       class="bg-blue-700 text-white px-6 py-3 rounded-lg hover:bg-blue-800 transition-colors inline-flex items-center justify-center space-x-2">
                        <i data-lucide="home" class="h-4 w-4"></i>
                        <span>Về trang chủ</span>
                    </a>
                    <a asp-controller="Products" asp-action="Index" 
                       class="border border-blue-700 text-blue-700 px-6 py-3 rounded-lg hover:bg-blue-50 transition-colors inline-flex items-center justify-center space-x-2">
                        <i data-lucide="shopping-bag" class="h-4 w-4"></i>
                        <span>Tiếp tục mua sắm</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        lucide.createIcons();
    </script>
}