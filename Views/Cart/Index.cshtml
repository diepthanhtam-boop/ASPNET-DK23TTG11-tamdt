@model List<LaptopShopWebsite.Models.CartItem>
@{
    ViewData["Title"] = "Giỏ hàng";
}

<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-8">Giỏ hàng của bạn</h1>

        @if (Model.Count == 0)
        {
            <div class="bg-white rounded-lg shadow-md p-8 text-center">
                <i data-lucide="shopping-cart" class="h-16 w-16 text-gray-400 mx-auto mb-4"></i>
                <h2 class="text-xl font-semibold text-gray-700 mb-2">Giỏ hàng trống</h2>
                <p class="text-gray-500 mb-6">Bạn chưa có sản phẩm nào trong giỏ hàng</p>
                <a asp-controller="Products" asp-action="Index" 
                   class="bg-blue-700 text-white px-6 py-3 rounded-lg hover:bg-blue-800 transition-colors inline-flex items-center space-x-2">
                    <i data-lucide="arrow-left" class="h-4 w-4"></i>
                    <span>Tiếp tục mua sắm</span>
                </a>
            </div>
        }
        else
        {
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                <!-- Cart Items -->
                <div class="lg:col-span-2">
                    <div class="bg-white rounded-lg shadow-md overflow-hidden">
                        <div class="px-6 py-4 border-b border-gray-200">
                            <h2 class="text-lg font-semibold">Sản phẩm (@Model.Count)</h2>
                        </div>
                        <div class="divide-y divide-gray-200">
                            @foreach (var item in Model)
                            {
                                <div class="p-6 flex items-center space-x-4" id="cart-item-@item.Id">
                                    <img src="@item.Image" alt="@item.Name" class="w-20 h-20 object-cover rounded-lg" />
                                    
                                    <div class="flex-1">
                                        <h3 class="font-semibold text-gray-900">@item.Name</h3>
                                        <p class="text-sm text-gray-500">@item.Brand</p>
                                        <p class="text-lg font-bold text-blue-700 mt-1">
                                            @item.Price.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))
                                        </p>
                                    </div>
                                    
                                    <div class="flex items-center space-x-3">
                                        <div class="flex items-center border border-gray-300 rounded-lg">
                                            <button onclick="updateQuantity('@item.Id', @(item.Quantity - 1))" 
                                                    class="px-3 py-2 hover:bg-gray-100 @(item.Quantity <= 1 ? "opacity-50 cursor-not-allowed" : "")"
                                                    @(item.Quantity <= 1 ? "disabled" : "")>
                                                -
                                            </button>
                                            <span class="px-4 py-2 font-medium">@item.Quantity</span>
                                            <button onclick="updateQuantity('@item.Id', @(item.Quantity + 1))" 
                                                    class="px-3 py-2 hover:bg-gray-100">
                                                +
                                            </button>
                                        </div>
                                        
                                        <button onclick="removeFromCart('@item.Id')" 
                                                class="text-red-500 hover:text-red-700 p-2">
                                            <i data-lucide="trash-2" class="h-4 w-4"></i>
                                        </button>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    
                    <div class="mt-6 flex justify-between">
                        <a asp-controller="Products" asp-action="Index" 
                           class="text-blue-700 hover:text-blue-800 inline-flex items-center space-x-2">
                            <i data-lucide="arrow-left" class="h-4 w-4"></i>
                            <span>Tiếp tục mua sắm</span>
                        </a>
                        
                        <button onclick="clearCart()" 
                                class="text-red-500 hover:text-red-700 inline-flex items-center space-x-2">
                            <i data-lucide="trash-2" class="h-4 w-4"></i>
                            <span>Xóa tất cả</span>
                        </button>
                    </div>
                </div>

                <!-- Order Summary -->
                <div class="lg:col-span-1">
                    <div class="bg-white rounded-lg shadow-md p-6 sticky top-8">
                        <h2 class="text-lg font-semibold mb-4">Tóm tắt đơn hàng</h2>
                        
                        <div class="space-y-3 mb-4">
                            <div class="flex justify-between">
                                <span>Tạm tính:</span>
                                <span id="subtotal">@Model.Sum(x => x.Price * x.Quantity).ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</span>
                            </div>
                            <div class="flex justify-between">
                                <span>Phí vận chuyển:</span>
                                <span class="text-green-600">Miễn phí</span>
                            </div>
                            <div class="border-t pt-3">
                                <div class="flex justify-between text-lg font-semibold">
                                    <span>Tổng cộng:</span>
                                    <span id="total" class="text-blue-700">@Model.Sum(x => x.Price * x.Quantity).ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</span>
                                </div>
                            </div>
                        </div>
                        
                        <a href="/Cart/Checkout" class="w-full bg-blue-700 text-white py-3 px-4 rounded-lg hover:bg-blue-800 transition-colors font-semibold block text-center">
                            Tiến hành thanh toán
                        </a>
                        
                        <div class="mt-4 text-center">
                            <div class="flex items-center justify-center space-x-4 text-sm text-gray-500">
                                <div class="flex items-center space-x-1">
                                    <i data-lucide="shield-check" class="h-4 w-4"></i>
                                    <span>Thanh toán an toàn</span>
                                </div>
                                <div class="flex items-center space-x-1">
                                    <i data-lucide="truck" class="h-4 w-4"></i>
                                    <span>Giao hàng nhanh</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        lucide.createIcons();
        
        function updateQuantity(productId, quantity) {
            if (quantity <= 0) {
                removeFromCart(productId);
                return;
            }
            
            $.post('/Cart/UpdateQuantity', { productId: productId, quantity: quantity }, function(data) {
                if (data.success) {
                    location.reload();
                }
            });
        }
        
        function removeFromCart(productId) {
            if (confirm('Bạn có chắc muốn xóa sản phẩm này khỏi giỏ hàng?')) {
                $.post('/Cart/RemoveFromCart', { productId: productId }, function(data) {
                    if (data.success) {
                        $('#cart-item-' + productId).remove();
                        $('#cart-count').text(data.cartCount);
                        $('#mobile-cart-count').text(data.cartCount);
                        
                        if (data.cartCount === 0) {
                            location.reload();
                        }
                    }
                });
            }
        }
        
        function clearCart() {
            if (confirm('Bạn có chắc muốn xóa tất cả sản phẩm trong giỏ hàng?')) {
                window.location.href = '/Cart/ClearCart';
            }
        }
    </script>
}